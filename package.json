{
  "name": "api-login-simples",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "test": "mocha --require ts-node/register --extension ts \"test/**/*.ts\"",
    "k6:test": "k6 run --env BASE_URL=http://localhost:3000 --env MAX_RESPONSE_TIME=1000 --env SUCCESS_RATE_THRESHOLD=0.95 performance/api-performance.js",
    "k6:report": "node performance/generate-report.js",
    "k6:full": "npm run k6:test && npm run k6:report",
    "ci:start": "node app.js &",
    "ci:health": "curl -f http://localhost:3000/health || echo 'API não está rodando'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "4.6.3"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "chai": "^4.5.0",
    "mocha": "^11.7.1",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
